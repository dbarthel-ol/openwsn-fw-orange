#!/bin/bash
ROOT_FOLDER=${0%/*}
BIN_FOLDER=${ROOT_FOLDER}/bin/
BUILD_FOLDER=${ROOT_FOLDER}/build/

rm -rf ${BUILD_FOLDER}
scons board=iot-lab_M3 toolchain=armgcc oos_openwsn dagroot=0 debug=1
mv ${ROOT_FOLDER}/projects/common/03oos_openwsn_prog ${BIN_FOLDER}/openwsn_router
rm -rf ${BUILD_FOLDER}
scons board=iot-lab_M3 toolchain=armgcc oos_openwsn dagroot=1 debug=1
cp ${ROOT_FOLDER}/projects/common/03oos_openwsn_prog ${BIN_FOLDER}/openwsn_dagroot